<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/titleLoginTextView"
        android:layout_width="149dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/log_in"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/abeezeeregular"
        />

    <TextView
        android:id="@+id/enterUsernameTextView"
        android:layout_width="228dp"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:text="@string/enter_your_user_name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleLoginTextView"
        android:fontFamily="@font/abeezeeitalic"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <EditText
        android:id="@+id/userNameLoginEditText"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:autofillHints="Please enter user name"
        android:hint="@string/username"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterUsernameTextView"


        android:fontFamily="@font/abeezeeregular"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/edit_text_border"
        />


    <TextView
        android:id="@+id/enterPasswordTextView"
        android:layout_width="228dp"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:text="@string/enter_your_password"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameLoginEditText"

        android:fontFamily="@font/abeezeeitalic"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <EditText
        android:id="@+id/passwordLoginEditText"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:autofillHints="Please enter user name"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPasswordTextView"

        android:fontFamily="@font/abeezeeregular"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/edit_text_border"

        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:text="@string/log_in"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordLoginEditText"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/abeezeeregular"
        android:backgroundTint="@color/QuillOrange"
        android:background="@drawable/rounded_button"
        />



    <ImageView
        android:id="@+id/topImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wavyloginlandingpagetop"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bottomImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wavyloginlandingpagebottom"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text on bottom image -->
    <TextView
        android:id="@+id/bottomImageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/dont_have_an_account"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomImageView"
        app:layout_constraintEnd_toEndOf="@id/bottomImageView"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/bottomImageView"
        android:fontFamily="@font/abeezeeitalic"
        />

    <!-- Hyperlink TextView -->
    <TextView
        android:id="@+id/bottomImageTextViewClickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/QuillHighlight"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/bottomImageTextView"
        app:layout_constraintStart_toStartOf="@id/bottomImageView"
        app:layout_constraintEnd_toEndOf="@id/bottomImageView"
        android:fontFamily="@font/abeezeeregular"
        />




</androidx.constraintlayout.widget.ConstraintLayout>